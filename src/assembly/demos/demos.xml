<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/assembly/demos</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>Nivel*/**</include>
                <include>DotEater/**</include>
                <include>BrickBall/**</include>
                <include>demo/**</include>
                <include>demo2/**</include>
                <include>Quince/**</include>
                <include>Rogue/**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>